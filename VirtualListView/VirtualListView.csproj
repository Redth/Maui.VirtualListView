<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
    <TargetFrameworks Condition=" '$(OS)' == 'Windows_NT' ">$(TargetFrameworks);net6.0-windows10.0.19041.0;</TargetFrameworks>
    <AssemblyName>VirtualListView</AssemblyName>
    <RootNamespace>Microsoft.Maui.Controls.VirtualListViewControl</RootNamespace>
    <PackageId>Microsoft.Maui.Controls.VirtualListView</PackageId>
    <Summary>A virtual ListView for .NET MAUI</Summary>
    <Title>VirtualListView for .NET MAUI</Title>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <AssemblyFileVersion>1.0.0.0</AssemblyFileVersion>
    <Version>1.0.0</Version>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>Microsoft, Redth</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Copyright>Â© Microsoft Corporation. All rights reserved.</Copyright>
    <RepositoryUrl>https://github.com/redth/Xamarin.Forms.VirtualListView</RepositoryUrl>
    <DefineConstants>$(DefineConstants);</DefineConstants>
    <DebugType>portable</DebugType>
    <Configurations>Debug;Release</Configurations>
    <LangVersion>latest</LangVersion>
		<UseMaui>True</UseMaui>
    <SingleProject>True</SingleProject>
    <UseMaui>True</UseMaui>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
		<DisableEmbeddedXbf>false</DisableEmbeddedXbf>
 </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)'=='Debug' ">
    <DebugSymbols>true</DebugSymbols>
  </PropertyGroup>
  <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
    <Compile Include="**\*.netstandard.cs" />
    <Compile Include="**\*.netstandard.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" !$(TargetFramework.StartsWith('netstandard')) ">
    <Compile Remove="**\*.netstandard.cs" />
    <Compile Remove="**\*.netstandard.*.cs" />
  </ItemGroup>
  <ItemGroup Condition=" '$(TargetFramework)' != 'net6.0-ios' And '$(TargetFramework)' != 'net6.0-maccatalyst' ">
    <Compile Remove="Apple\**\*.cs" />
  </ItemGroup>
	<ItemGroup>
		<None Include="Apple\**\*.cs" />
	</ItemGroup>
 
	<Target Name="ValidateWinUIPlatform" />
	<Target Name="BinPlaceBootstrapDll" />
</Project>